<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_horizontal_margin">

    <ImageView
        android:src="@mipmap/ic_launcher"
        android:layout_width="@dimen/tutor_image_size"
        android:layout_height="@dimen/tutor_image_size"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:id="@+id/imgTutor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgTutor"
        android:layout_toEndOf="@+id/imgTutor"
        android:id="@+id/editTxtNameTutor"
        android:textStyle="bold"
        android:textSize="@dimen/content_tutor_txt_size"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgTutor"
        android:layout_toEndOf="@+id/imgTutor"
        android:layout_below="@+id/editTxtNameTutor"
        android:id="@+id/editTxtEducation"
        android:textStyle="bold"
        android:textSize="@dimen/content_tutor_txt_size"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/imgTutor"
        android:layout_toEndOf="@+id/imgTutor"
        android:layout_below="@+id/editTxtEducation"
        android:id="@+id/editTxtPrice"
        android:textStyle="bold"
        android:textSize="@dimen/content_tutor_txt_size_2"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtStatus"
        android:textSize="@dimen/content_tutor_txt_size_2"
        android:layout_below="@+id/editTxtEducation"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignRight="@+id/editTxtNameTutor"
        android:layout_alignEnd="@+id/editTxtNameTutor" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:layout_toRightOf="@+id/imgTutor"
        android:layout_toEndOf="@+id/imgTutor"
        android:layout_below="@+id/txtStatus"
        android:numStars="5"
        android:max="5"
        style="?android:attr/ratingBarStyleSmall"
        android:stepSize="0.25"
        android:isIndicator="true"/>

</RelativeLayout>